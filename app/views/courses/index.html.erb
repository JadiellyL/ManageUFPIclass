<p id="notice"><%= notice %></p>

<h1>Cursos</h1>
<div class="container">
<table class="table">
  <thead>
    <tr>

      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
       
        <td><%= link_to 'Editar', edit_course_path(course), :class => "btn btn-outline-warning" %></td>
        <td><%= link_to 'Excluir', course, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Curso', new_course_path, :class => "btn btn-outline-primary" %>
</div>