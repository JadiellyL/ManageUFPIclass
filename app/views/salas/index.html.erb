<p id="notice"><%= notice %></p>

          <h2 class="text-center text-lg text-uppercase my-0"><strong> Salas </strong></h2>
          <br>
          <br>

          <div class="container-fluid">

          <table>
          <thead>
            <tr>
              <th>Number</th>
              <th>Status</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
              <% @salas.each do |sala| %>
                <tr>
                  <td><%= sala.number %></td>
                  <td><%= sala.status %></td>
                  <td><%= link_to 'Mostrar', sala %></td>
                  <td><%= link_to 'Editar', edit_sala_path(sala) %></td>
                  <td><%= link_to 'Excluir', sala, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
          </tbody>

          </table>

        </div>
